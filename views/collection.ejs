        <div class="row gy-1">
            <% for(let i = 0; i < cardArr.length; ++i) { %>
                <div class="col-lg-3 col-md-6">
                    <form action="/cardpage" method="POST">
                        <a href="/cardpage/<%= cardArr[i].cardId %>"><img class="search-img" src="<%= cardArr[i].cardImg %>" alt="..."></a>
